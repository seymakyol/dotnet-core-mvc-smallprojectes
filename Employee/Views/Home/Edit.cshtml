@model  Calisan
@{
    ViewData["Title"] = "Edit";
}


<div class="container">

    <div class="row m-lg-3">
        <div class="col-md-4">
            

            <form asp-controller="Home" asp-action="Edit" class="container ">

                <input type="hidden" asp-for="Id" />

                <div class="form-group row">

                    <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>


                <div class="form-group row">


                    <label asp-for="Age" class="col-sm-2 col-form-label">Age</label>

                    <div class="col-sm-10">
                        <input asp-for="Age" class="form-control" />
                    </div>
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>



                <div class="form-group">

                    <input type="Submit" asp-action="Edit" asp-controller="Home" value="Click To Save" class="btn btn-success mt-3 btn-sm " />

                </div>



            </form>




        </div>
    </div>
</div>