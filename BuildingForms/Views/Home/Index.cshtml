@model  IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Product List</h1>

<br/>

<table class="table table-sm table-bordered">
   <thead class="bg-primary text-white">
       <tr>
           <th>Name</th>
           <th>Price</th>
           <th>Is  Approved</th>
           <th> </th>
       </tr>
   </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>


                @if (@item.isApproved == true)
                {

                    <span class="badge badge-pill badge-success">Onaylı</span>
                    @*<a href="#" class="badge badge-success">Onaylı</a>*@
                }
                else
                {
                    <a href="#" class="badge badge-danger">Onay Bekliyor</a>
                }


            </td>
          
            <td>

                <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">Edit</a>
            </td>
        </tr>

        }


    </tbody>
</table>

<a class="btn bg-primary" asp-controller="Home" asp-action="Create">Create</a>
 